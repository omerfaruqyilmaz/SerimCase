@{
    ViewData["Title"] = "Müşteriler";
}

@model List<SerimCase.ViewModels.CustomerViewModel>

<h2>Müşteri Listesi</h2>


<div class="header-container">
    <div>
        <h2>
            <a asp-action="Create" asp-controller="Customer" class="btn btn-info">Müşteri Ekle</a>
        </h2>
    </div>
    <div style="margin-left: auto;">
        <span class="toggle-label">Aktif/Pasif</span>
        <label class="toggle-switch">
            <input type="checkbox" id="toggleBtn" checked>
            <span class="slider round"></span>
        </label>
    </div>
</div>

@if (TempData["status"] != null)
{
    <div class="alert alert-primary" role="alert">
        @TempData["status"]
    </div>
}



<style>
    .header-container {
        display: flex;
        justify-content: flex-end;
        align-items: center;
        margin-bottom: 10px;
    }

    .toggle-switch {
        position: relative;
        width: 60px;
        height: 34px;
        display: inline-block;
        margin-left: 10px;
    }

        .toggle-switch input {
            opacity: 0;
            width: 0;
            height: 0;
        }

    .slider {
        position: absolute;
        cursor: pointer;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: #ccc;
        transition: .4s;
    }

        .slider:before {
            position: absolute;
            content: "";
            height: 26px;
            width: 26px;
            left: 4px;
            bottom: 4px;
            background-color: white;
            transition: .4s;
        }

    input:checked + .slider {
        background-color: #4CAF50; /* Green color */
    }

        input:checked + .slider:before {
            transform: translateX(26px);
        }

    .slider.round {
        border-radius: 34px;
    }

        .slider.round:before {
            border-radius: 50%;
        }

    .toggle-label {
        margin-right: 10px;
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Load active customers on page load
            loadCustomerList(true);

            $('#toggleBtn').change(function () {
                if ($(this).is(':checked')) {
                    loadCustomerList(true);
                } else {
                    loadCustomerList(false);
                }
            });

            function loadCustomerList(isActive) {
                $.ajax({
                    url: '@Url.Action("GetCustomerList", "Customer")',
                    type: 'GET',
                    data: { isActive: isActive },
                    success: function (data) {
                        $('#customerList').html(data);
                    },
                    error: function (xhr, status, error) {
                        console.error("Error: " + error);
                    }
                });
            }
        });
    </script>
}

<div id="customerList">
    <partial name="_CustomerList" model="Model" />
</div>


